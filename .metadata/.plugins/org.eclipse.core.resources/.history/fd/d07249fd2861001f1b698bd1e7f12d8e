<body>
	<button id="btn1">slideUp</button>
	<button id="btn2">slideDown</button>&nbsp;&nbsp;&nbsp;
	
	<button id="btn3">fadeIn</button>
	<button id="btn4">fadeOut</button>&nbsp;&nbsp;&nbsp;
	
	<button id="btn5">slide toggle</button>
	<button id="btn6">toggle</button>&nbsp;&nbsp;&nbsp;
	
	<p></p>
	<img alt="" src="../img/1.jpg" width="400" height="300">
</body>

<script type="text/javascript" src="http://code.jquery.com/jquery-3.7.1.min.js"></script>
<script type="text/javascript">
$(function() {
	// width 와 height가 없으면 위아래로 안움직임 ㅋㅋㅋ
	$('#btn1').click(function() {
		$('img').slideUp(500);
	});
	$('#btn2').click(function() {
		$('img').slideDown(500);
	});
	
	
	$('#btn3').click(function() {
		$('img').fadeIn(1000);
	});
	$('#btn4').click(function() {
		$('img').fadeOut(1000);
	});
	
});
</script>
</html>


 